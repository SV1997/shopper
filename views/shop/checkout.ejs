                <script>
                    var stripe= Stripe('pk_test_51OJBUmSEdpuyefD8vgZjOUdU1THlLhTrHoYDOW7bZFUG2cEM7qkeWkHb7yNlCZ4z9ZpUXhWxYE7qka6N9bxmNRCJ00FQYuLTbv');
                    var orderBrn=document.getElementById('order-button').addEventListener('click',function(){
                        stripe.redirectToCheckout({
                            sessionId:'<%= sessionId %>'
                        })
                    })

                </script>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>